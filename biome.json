{
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [
      "bun.lockb",
      "node_modules"
    ],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "semicolons": "always"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}